<div class="row">
  <div class="col-md-11">
    <%= form_for article, html: { class: "form-horizontal", role: "form" } do |f| %>
      <% if @article.errors.any? %>
        <%= render 'errors', article: @article %>
      <% end %>
      <div class="form-group">
        <div class="control-label col-md-1">
          <%= f.label :title %>
        </div>
        <div class="col-md-11">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-1">
          <%= f.label :body %>
        </div>
        <div class="col-md-11">
          <%= f.text_area :body, rows: 10, class: "form-control", placeholder: 'Body article' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset col-md-12">
          <%= f.submit class: "btn btn-primary btn-lg pull-right" %>
        </div>
      </div>
    <% end %>
  </div>
</div>